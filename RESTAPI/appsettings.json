{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },

    "Database": {
        "Elasticsearch": {
            "Nodes": [ "https://node1.elastic.example.com" ]
        }
    },

    "WebServer": {
        "URL": "http://localhost:8080",
        "PublicURL": "http://example.com",
        "Auth": {
            "JWTSecret": "my-secret-used-to-sign-jwts"
        }
    },

    "MailService": {
        "Address": "smtp.my-mail-service.com",
        "Port":  587,
        "Username": "my_username",
        "Password":  "my_password"
    },

    "Storage": {
        "Minio": {
            "Endpoint": "minio.example.com",
            "AccessKey": "my_minio_key",
            "SecretKey": "my_minio_secret",
            "DefaultLocation": "us-east-1",
            "SSLEnabled": true
        }
    }
}